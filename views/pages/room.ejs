<!DOCTYPE html>
<html  lang="en">
    <head>
        <%- include('../partials/head') -%>
        <script>
            var roomId ="<%= roomId %>";
        </script>
    </head>
    <body>
        
        <div class="main">
            <div class="main__left">
                <div class="main__videos">
                    <div id="video-grid">
                    </div>
                </div>
                <div class="main__controls">
                    <div class="main__controls_block">
                        <div class="main__controls-button">
                            <i class="fa fa-microphone" aria-hidden="true"></i>
                            <span>Mute</span>
                        </div>
                        <div class="main__controls-button">
                            <i class="fas fa-stop"></i>
                            <span>Stop video</span>
                        </div>
                    </div>
                    <div class="main__controls_block">
                        <div class="main__controls-button">
                            <i class="fas fa-shield-alt"></i>
                            <span>Security</span>
                        </div>
                        <div class="main__controls-button">
                            <i class="fas fa-user-friends"></i>
                            <span>Participants</span>
                        </div>
                        <div class="main__controls-button">
                            <i class="far fa-comment-alt"></i>
                            <span>Chat</span>
                        </div>
                    </div>
                    <div class="main__controls_block">
                        <div class="main__controls-button main__controls-leave-meeting">
                            <span>Leave meeting</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main__right">
                <div class="main__chat_header">
                    Chat
                </div>
                <div class="main__chat_window">
                    <ul class="messages">

                    </ul>
                </div>
                <div class="main__message_container">
                    <input type="text" name="chat_message" placeholder="Type message here..." id="chat_message" />
                </div>
            </div>
        </div>
        
        <script src="../script.js"></script>
    </body>
</html>